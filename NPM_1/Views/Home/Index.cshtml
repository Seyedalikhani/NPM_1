@{
    ViewBag.Title = "Home Page";
}



<!DOCTYPE HTML>
<html>
<head>

    <br>
    <br />


    <script>

        window.onload = function () {

            var dataPoints1 = [];

            var chart1 = new CanvasJS.Chart("chartContainer1", {
                zoomEnabled: true,
                animationEnabled: true,
                theme: "dark2",   // "light1", "light2", "dark1", "dark2"
                title: {
                    text: "Voice Traffic (MErlang)",
                    fontSize: 20,
                },
                axisY: {
                    maximum: 32,
                    interval: 5,
                    //title: "",
                    //titleFontSize: 24,
                    //prefix: "",
                    //crosshair: {
                    //    enabled: true,
                    //    valueFormatString: "#,##0.##",
                    //    snapToDataPoint: true
                    //}
                },
                //axisX: {
                //    crosshair: {
                //        enabled: true,
                //        snapToDataPoint: true
                //    }
                //},
                data: [{
                    type: "line",
                    lineColor: "yellow",
                    yValueFormatString: "#,##0.##",
                    xValueFormatString: "MMM DD YYYY",
                    dataPoints: dataPoints1
                }]
            });

            function addData1(data) {
                for (var i = 0; i < data.length; i++) {
                    dataPoints1.push({
                        x: new Date(data[i].x),
                        y: data[i].y
                    });
                }
                chart1.render();

            }
           
            
            var dataPoints2 = [];

            var chart2 = new CanvasJS.Chart("chartContainer2", {
                zoomEnabled: true,
                animationEnabled: true,
                theme: "dark2",   // "light1", "light2", "dark1", "dark2"
                title: {
                    text: "Data Traffic (PB)",
                    fontSize: 20,
                },
                axisY: {
                    maximum: 32,
                    interval: 5,
                    //title: "",
                    //titleFontSize: 24,
                    //prefix: "",
                    //crosshair: {
                    //    enabled: true,
                    //    valueFormatString: "#,##0.##",
                    //    snapToDataPoint: true
                    //}
                },
                //axisX: {
                //    crosshair: {
                //        enabled: true,
                //        snapToDataPoint: true
                //    }
                //},
                data: [{
                    type: "line",
                    lineColor: "yellow",
                    yValueFormatString: "#,##0.##",
                    xValueFormatString: "MMM DD YYYY",
                    dataPoints: dataPoints2
                }]
            });

            function addData2(data) {
                for (var i = 0; i < data.length; i++) {
                    dataPoints2.push({
                        x: new Date(data[i].x),
                        y: data[i].z
                    });
                }
                
                chart2.render();
            }

            $.getJSON("/home/json", addData1);          
            $.getJSON("/home/json", addData2);




        }
    </script>

</head>

<body>


    <div id="chartContainer1" style="height: 470px; width: 100%;"></div><br>

    <div id="chartContainer2" style="height: 470px; width: 100%; top: 2500px"></div>

